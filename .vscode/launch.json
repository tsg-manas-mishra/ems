    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python Debugger: FastAPI",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": ["server.main:app", "--reload"],
        "python": "${workspaceFolder}/server/venv/Scripts/python",
        "envFile": "${workspaceFolder}/server/.venv",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/server"
        },
        "jinja": true
      }
    ]
  }